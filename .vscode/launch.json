  "version": "0.2.0",
  "configurations": [
    {
      "name": "Transcribe Single Video",
      "type": "debugpy",
      "request": "launch",
      "module": "src.main_transcribe_single",
      "args": [
        "--dataset_filepath",
        "${workspaceFolder}/data/viclaim.csv",
        "--clip_id",
        "qDhk2_p6x90",
        "--output_filepath",
        "${workspaceFolder}/temp/dataset/viclaim_transcript_single.csv",
        "--temp_dir",
        "${workspaceFolder}/temp/videos/"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {},
      // "python": "${workspaceFolder}/venv/bin/python"
      "python": "${workspaceFolder}/venv/Scripts/python.exe"
    },
    {
      "name": "Transcribe Multiple Videos",
      "type": "debugpy",
      "request": "launch",
      "module": "src.main_transcribe_multi",
      "args": [
        "--filepath",
        "${workspaceFolder}/data/viclaim.csv",
        "--output_filepath",
        "${workspaceFolder}/temp/dataset/viclaim_transcript.csv",
        "--temp_dir",
        "${workspaceFolder}/temp/videos/"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {},
      // "python": "${workspaceFolder}/venv/bin/python"
      "python": "${workspaceFolder}/venv/Scripts/python.exe"
    }
  ]
}
